@model RiskRegisterII.Models.LoginModel
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<br />

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Risk Management</title>
    <script type="text/javascript">
